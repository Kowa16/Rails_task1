<h3>スケジュール一覧</h3>
<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>スケジュール更新日時</th>
        <th>詳細</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
 
    <tbody>
      <% @lists.each do |list| %>
      <tr>
        <td><%= list.id %></td>
        <td><%= list.title %></td>
        <td><%= list.start %></td>
        <td><%= list.end %></td>
        <td><%= list.updated_at %></td>
        <td><%= link_to "詳細", list %></td>
        <td><%= link_to "編集", [:edit,list] %></td>
        <td><%= link_to "削除", list, data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
 
<p><%= link_to "スケジュール新規登録", :new_list %></p>